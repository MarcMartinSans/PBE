import board
import busio
from py532lib.i2c import Pn532_i2c
import time

i2c = busio.I2C(board.SCL, board.SDA)

pn532 = Pn532_i2c(i2c)

print("Esperando una tarjeta NFC...")

while True:
    uid = pn532.read_mifare()
    if uid:
        print("Tarjeta detectada con UID:", [hex(i) for i in uid])
    time.sleep(1)
